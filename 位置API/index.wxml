<view style="margin:20px">
   <text style="font-size:30px">E{{location.longitude[0]}}°{{location.longitude[1]}}′N{{location.latitude[0]}}°{{location.latitude[1]}}′</text>
   <button style="margin-top:20px" bindtap="onClick">获取位置</button>
   <button style="margin-top:20px" bindtap="chooseLocation">在地图上选择位置</button>
   <button style="margin-top:20px" bindtap="openLocation">使用微信内部地图查看位置</button>

<map style="margin-top:20px;width:100%;height:40vh" id="myMap" show-location />

<button style="margin-top:20px" type="primary" bindtap="getCenterLocation">获取位置</button>
<button style="margin-top:20px" type="primary" bindtap="moveToLocation">移动位置</button>   
</view>


