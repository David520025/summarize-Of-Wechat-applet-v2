<!-- 表单组件：form -->
<view style="margin:30px">
  <form catchsubmit="formSubmit" catchreset="formReset">
    <switch name="switch" checked="true"/>
    <slider style="margin-top:20px" name="slider" show-value/>
    <input style="margin-top:20" name="input" placeholder="请输入名字"/>
    <radio-group style="margin-top:20px" name="radio-group">
       <label>
         <radio value="radio1"/>radio1 
       </label>
       <label>
         <radio value="radio2"/>radio2
       </label>
    </radio-group>
    <view style="margin-top:20px">
      <checkbox-group name="checkbox">
        <label>
           <checkbox value="checkbox1"/>checkbox1
        </label>
        <label>
           <checkbox value="checkbox2"/>checkbox2
        </label>
      </checkbox-group>
    </view>
    <view style="margin-top:20px">
      <button form-type="submit">Submit</button>
      <button style="margin-top:20px" form-type="reset">Reset</button>

    </view>
  </form>
</view>